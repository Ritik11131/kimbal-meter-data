{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "chmod +x scripts/setup-ssh-tunnel.sh scripts/start-with-tunnel.sh && ./scripts/start-with-tunnel.sh",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicy": {
      "maxRetries": 10,
      "wait": 20
    }
  }
}

